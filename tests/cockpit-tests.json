{
    "apiVersion": "v1",
    "kind": "List",
    "items": [
        {
            "kind": "ReplicationController",
            "metadata": {
                "name": "cockpit-tests",
                "annotations": {
                    "openshift.io/scc": "privileged"
                }
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "infra": "cockpit-tests"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "infra": "cockpit-tests"
                        },
                        "annotations": {
                            "openshift.io/scc": "privileged"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "cockpit-tests",
                                "image": "docker.io/cockpit/tests",
                                "securityContext": {
                                    "privileged": true,
                                    "runAsUser": 1111,
                                    "hostNetwork": false
                                },
                                "env": [
                                    {
                                        "name": "TEST_JOBS",
                                        "value": "8"
                                    },
                                    {
                                        "name": "TEST_PUBLISH",
                                        "value": "sink"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "secrets",
                                        "mountPath": "/secrets",
                                        "readOnly": true
                                    },
                                    {
                                        "name": "cache",
                                        "mountPath": "/cache",
                                        "readOnly": false
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "secrets",
                                "secret": {
                                    "secretName": "cockpit-tests-secrets"
                                }
                            },
                            {
                                "name": "cache",
                                "hostPath": {
                                    "path": "/var/cache/cockpit-tests"
                                }
                            }
                        ],
                        "serviceAccountName": "tester"
                    }
                }
            }
        }
    ]
}
