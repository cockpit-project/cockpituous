[Unit]
Description=Cockpit Major Release Runner
Requires=docker.service
After=docker.service

[Service]
Restart=always
RestartSec=1800
ExecStart=/bin/sh -xc "/usr/bin/docker run --name=cockpit-release --privileged --volume=/home/cockpit:/home/user:rw --volume=/home/cockpit/release:/build:rw cockpit/infra-release -r https://github.com/cockpit-project/cockpit /usr/local/bin/major-cockpit-release"
ExecStop=-/bin/sh -xc "/usr/bin/docker rm -f cockpit-release"

[Install]
WantedBy=multi-user.target
